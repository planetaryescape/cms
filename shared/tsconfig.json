{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		// Environment setup
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",

		// Output configuration
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"noEmit": false,
		"sourceMap": true,

		// Type checking
		"strict": true,
		"skipLibCheck": true,

		// Module resolution
		"moduleResolution": "bundler",

		// Additional checks
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.test.ts", "dist"]
}

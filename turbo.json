{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"env": ["NODE_ENV", "VITE_*"]
		},
		"dev": {
			"cache": false,
			"persistent": true,
			"env": ["NODE_ENV", "PORT", "VITE_*"]
		},
		"lint": {
			"dependsOn": ["^build"],
			"outputs": [".eslintcache"],
			"env": ["NODE_ENV"]
		},
		"typecheck": {
			"dependsOn": ["^build"],
			"env": ["NODE_ENV"]
		},
		"test": {
			"dependsOn": ["^build"],
			"env": ["NODE_ENV", "CI"]
		}
	},
	"globalDependencies": [
		"**/.env",
		"**/.env.*",
		"**/.env.local",
		"**/.env.*.local",
		".gitignore",
		"turbo.json",
		"package.json",
		"bun.lock",
		"tsconfig.json"
	],
	"globalEnv": [
		"NODE_ENV",
		"CI",
		"TURBO_TOKEN",
		"TURBO_TEAM",
		"TURBO_REMOTE_ONLY"
	]
}

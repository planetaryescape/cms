{
	"name": "server",
	"version": "0.0.1",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"dev": "bun --watch run src/index.ts & tsc --watch",
		"migrate": "bun run src/db/migrate.ts",
		"migrate:up": "bun run src/db/migrate.ts up",
		"migrate:down": "bun run src/db/migrate.ts down",
		"migrate:status": "bun run src/db/migrate.ts status",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@effect/platform": "^0.93.8",
		"better-auth": "^1.4.7",
		"effect": "^3.19.12",
		"hono": "^4.10.8",
		"kysely": "^0.28.9",
		"pg": "^8.16.3",
		"shared": "workspace:*"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/pg": "^8.16.0",
		"@vitest/ui": "^2.1.8",
		"testcontainers": "^10.16.2",
		"vitest": "^2.1.8"
	}
}
